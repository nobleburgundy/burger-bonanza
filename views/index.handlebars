<div class="row">
    <div class="col-lg waiting-area">
        <h2>Waiting To Be Devoured</h2>
        <small>Click to devour</small>
        <ul class="waiting-list">
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                <div class="btn-group" role="group" aria-lable="Waiting List Button Group"><button
                        class="burger-button waiting" data-id="{{id}}"
                        data-devoured="{{devoured}}">{{burger_name}}</button><button class="delete-button"
                        data-id="{{id}}" data-name="{{burger_name}}"><i class="fas fa-trash"></i></button></div>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-lg devoured-area">
        <h2>Devoured</h2>
        <small>Click to add to Waiting List</small>
        <ul class="waiting-list">
            {{#each burgers}}
            {{#if devoured}}
            <li>
                <div class="btn-group" role="group" aria-lable="Devoured Button Group"><button
                        class="burger-button devoured" data-id="{{id}}"
                        data-devoured="{{devoured}}">{{burger_name}}</button><button class="delete-button"
                        data-id="{{id}}" data-name="{{burger_name}}"><i class="fas fa-trash"></i></button></div>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto form-group">
        <form class="add-burger-form needs-validation" novalidate>
            <h2 for="burger-input">Add Burger</h2>
            <div class="input-group d-flex justify-content-center">
                <input class="form-control" id="burger-input" type="text"
                    placeholder="Enter a new burger you'd like to devour..." maxlength="255" minlength="2" required />
                <div class="input-group-append">
                    <button class="add-button" type="submit">Add Burger</button>
                </div>
                <div class="invalid-feedback">
                    Invalid burger name (must be between 2 and 150 characters)
                </div>
            </div>
        </form>
    </div>
</div>

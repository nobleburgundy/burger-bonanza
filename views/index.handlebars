<div class="row">
    <div class="six columns waiting-area-div">
        <h4>Waiting To Be Devoured</h4>
        <ul class="waiting-list">
            {{#each burgers}}
            {{#unless devoured}}
            <li><button class="burger-button" data-id="{{id}}">{{burger_name}}</button></li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="six columns devoured-area">
        <h4>Devoured</h4>
        <ul class="waiting-list">
            {{#each burgers}}
            {{#if devoured}}
            <li><button class="burger-button" data-id="{{id}}">{{burger_name}}</button></li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<form class="add-burger-form">
    <label for="burger-input">New burger you'd like to eat:</label>
    <input id="burger-input" type="text" />
    <button type="submit">Add Burger</button>
</form>
